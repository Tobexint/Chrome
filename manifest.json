{
    "manifest_version": 2,
    "name": "Screen Recorder",
    "version": "1.0",
    "permissions": ["tabCapture", "videoCapture", "audioCapture", "storage", "<all_urls>", "desktopCapture"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Screen Recorder",
        "default_popup": "popup.html"
    }
    
}